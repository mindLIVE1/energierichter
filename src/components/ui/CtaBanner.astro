---
export interface Props {
  text: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: 'brand' | 'accent' | 'dark';
}

const {
  text,
  ctaText = 'Jetzt anfragen',
  ctaHref = '/anfrage',
  variant = 'brand',
} = Astro.props;

const bgMap: Record<string, string> = {
  brand: 'gradient-brand',
  accent: 'bg-gradient-to-r from-accent-500 to-accent-600',
  dark: 'gradient-dark',
};
---

<section class={`${bgMap[variant]} py-10 sm:py-14`}>
  <div class="container-wide flex flex-col sm:flex-row items-center justify-between gap-6 text-center sm:text-left">
    <p class="text-xl sm:text-2xl font-heading font-bold text-white max-w-xl leading-snug">
      {text}
    </p>
    <a href={ctaHref}
       class="shrink-0 inline-flex items-center gap-2 px-8 py-4 text-base font-semibold text-brand-700 bg-white rounded-xl shadow-lg hover:shadow-xl hover:scale-[1.02] active:scale-[0.98] transition-all duration-200">
      {ctaText}
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
    </a>
  </div>
</section>
