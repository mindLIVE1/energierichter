---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
  fullWidth?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  class: className = '',
  fullWidth = false,
} = Astro.props;

const base = 'inline-flex items-center justify-center gap-2 font-semibold rounded-xl transition-all duration-200 hover:scale-[1.02] active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500';

const variants: Record<string, string> = {
  primary: 'text-white gradient-brand shadow-md hover:shadow-lg',
  secondary: 'text-brand-700 bg-brand-50 hover:bg-brand-100 border border-brand-200',
  outline: 'text-gray-700 bg-white border-2 border-gray-200 hover:border-brand-300 hover:text-brand-700',
  ghost: 'text-gray-600 hover:bg-gray-100 hover:text-gray-900',
};

const sizes: Record<string, string> = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-sm',
  lg: 'px-8 py-4 text-base',
};

const classes = [base, variants[variant], sizes[size], fullWidth ? 'w-full' : '', className].join(' ');
const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
