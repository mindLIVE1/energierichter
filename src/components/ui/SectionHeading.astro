---
export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  light?: boolean;
}

const {
  title,
  subtitle,
  centered = true,
  light = false,
} = Astro.props;
---

<div class={`mb-12 sm:mb-16 ${centered ? 'text-center' : ''}`}>
  <h2 class={`text-3xl sm:text-4xl lg:text-5xl font-heading font-bold leading-tight mb-4 ${light ? 'text-white' : 'text-dark-900'}`}>
    {title}
  </h2>
  {subtitle && (
    <p class={`text-lg sm:text-xl max-w-2xl leading-relaxed ${centered ? 'mx-auto' : ''} ${light ? 'text-gray-300' : 'text-gray-500'}`}>
      {subtitle}
    </p>
  )}
</div>
