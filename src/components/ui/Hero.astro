---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  badge?: string;
}

const {
  title,
  subtitle,
  ctaText = 'Jetzt anfragen',
  ctaHref = '/anfrage',
  secondaryCtaText,
  secondaryCtaHref,
  badge,
} = Astro.props;
---

<section class="relative overflow-hidden gradient-dark">
  <!-- Decorative grid -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;40&quot; height=&quot;40&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cpath d=&quot;M0 0h40v40H0z&quot; fill=&quot;none&quot; stroke=&quot;white&quot; stroke-width=&quot;0.5&quot;/%3E%3C/svg%3E')"></div>
  <!-- Gradient orbs -->
  <div class="absolute -top-40 -right-40 w-96 h-96 bg-brand-500/20 rounded-full blur-3xl"></div>
  <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent-500/10 rounded-full blur-3xl"></div>

  <div class="relative container-wide section-padding">
    <div class="max-w-3xl">
      {badge && (
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-brand-500/10 border border-brand-500/20 text-brand-300 text-sm font-medium mb-6 animate-fade-in">
          <span class="w-1.5 h-1.5 rounded-full bg-brand-400 animate-pulse"></span>
          {badge}
        </div>
      )}

      <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-heading font-extrabold text-white leading-[1.1] mb-6 animate-slide-up">
        <Fragment set:html={title} />
      </h1>

      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-300 leading-relaxed mb-10 max-w-2xl animate-slide-up" style="animation-delay: 100ms">
          {subtitle}
        </p>
      )}

      <div class="flex flex-col sm:flex-row gap-4 animate-slide-up" style="animation-delay: 200ms">
        <a href={ctaHref}
           class="inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-semibold text-dark-900 bg-white rounded-xl shadow-lg hover:shadow-xl hover:scale-[1.02] active:scale-[0.98] transition-all duration-200">
          {ctaText}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        {secondaryCtaText && secondaryCtaHref && (
          <a href={secondaryCtaHref}
             class="inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-semibold text-white border-2 border-white/20 rounded-xl hover:bg-white/10 transition-all duration-200">
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>
