---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ConsentBanner from '../components/ConsentBanner.astro';
import ContactForm from '../components/ContactForm.astro';
import SectionHeading from '../components/ui/SectionHeading.astro';
---

<BaseLayout
  title="Kostenlos anfragen – Energieberatung | EnergieMakler"
  description="Senden Sie uns Ihre Anfrage mit Verbrauchsdaten und Dokumenten. Wir finden den besten Energietarif für Sie – kostenlos und unverbindlich."
>
  <Header slot="header" />

  <section class="section-padding">
    <div class="container-narrow">
      <SectionHeading
        title="Unverbindlich anfragen"
        subtitle="Füllen Sie das Formular aus und laden Sie optional Ihre letzte Energierechnung hoch. Wir melden uns innerhalb von 24 Stunden."
      />

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Form -->
        <div class="lg:col-span-2">
          <ContactForm showUpload={true} />
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <div class="bg-brand-50 rounded-2xl p-6 border border-brand-100">
            <h3 class="font-heading font-bold text-dark-900 mb-3">Warum EnergieMakler?</h3>
            <ul class="space-y-3 text-sm text-gray-700">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                100% kostenlos für Sie
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                Unabhängiger Vergleich
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                Antwort innerhalb 24h
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
                Datenschutz nach DSGVO
              </li>
            </ul>
          </div>

          <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm">
            <h3 class="font-heading font-bold text-dark-900 mb-3">Direkt kontaktieren</h3>
            <div class="space-y-3 text-sm text-gray-600">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                +49 123 456789
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                info@energiemakler-beispiel.de
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <ConsentBanner slot="consent" />
</BaseLayout>
