---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ConsentBanner from '../../components/ConsentBanner.astro';
import SectionHeading from '../../components/ui/SectionHeading.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Blog – Energiemarkt News & Tipps | EnergieMakler"
  description="Aktuelle Artikel zu Energiemarkt, Spartipps und Branchennews. Bleiben Sie informiert mit dem EnergieMakler Blog."
>
  <Header slot="header" />

  <section class="section-padding">
    <div class="container-wide">
      <SectionHeading
        title="Blog"
        subtitle="Aktuelle Tipps, News und Expertenwissen rund um Energie."
      />

      {posts.length === 0 ? (
        <p class="text-center text-gray-500">Noch keine Artikel vorhanden.</p>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="group bg-white rounded-2xl border border-gray-100 shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
              <div class="h-48 bg-gradient-to-br from-brand-100 to-brand-200 flex items-center justify-center">
                <svg class="w-12 h-12 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 text-xs text-gray-400 mb-3">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('de-DE', { day: 'numeric', month: 'long', year: 'numeric' })}
                  </time>
                  {post.data.author && <span>· {post.data.author}</span>}
                </div>
                <h2 class="text-lg font-heading font-bold text-dark-900 mb-2 group-hover:text-brand-600 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-sm text-gray-600 line-clamp-2">{post.data.description}</p>
                {post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="px-2 py-1 text-xs font-medium text-brand-700 bg-brand-50 rounded-md">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>

  <Footer slot="footer" />
  <ConsentBanner slot="consent" />
</BaseLayout>
